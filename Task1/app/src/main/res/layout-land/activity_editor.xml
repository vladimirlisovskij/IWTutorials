<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/label_editor"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/data_editor"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.04" />

  <EditText
      android:id="@+id/place_editor"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="156dp"
      android:backgroundTint="#0DC8E1"
      android:inputType="textPostalAddress"
      app:layout_constraintEnd_toEndOf="@+id/label_editor"
      app:layout_constraintHorizontal_bias="0.505"
      app:layout_constraintStart_toStartOf="@+id/label_editor"
      app:layout_constraintTop_toBottomOf="@+id/label_editor" />

  <EditText
      android:id="@+id/date_editor"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="92dp"
      android:backgroundTint="#68DC17"
      android:inputType="date"
      app:layout_constraintEnd_toEndOf="@+id/label_editor"
      app:layout_constraintHorizontal_bias="0.505"
      app:layout_constraintStart_toStartOf="@+id/label_editor"
      app:layout_constraintTop_toBottomOf="@+id/label_editor" />

  <Button
      android:id="@+id/submit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="200dp"
      android:text="@string/submit"
      app:layout_constraintEnd_toEndOf="@+id/label_editor"
      app:layout_constraintHorizontal_bias="0.6"
      app:layout_constraintStart_toStartOf="@+id/label_editor"
      app:layout_constraintTop_toBottomOf="@+id/label_editor" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="@string/nameLab"
      app:layout_constraintBottom_toTopOf="@+id/name_editor"
      app:layout_constraintEnd_toEndOf="@+id/name_editor"
      app:layout_constraintStart_toStartOf="@+id/name_editor" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="@string/placeLab"
      app:layout_constraintBottom_toTopOf="@+id/place_editor"
      app:layout_constraintEnd_toEndOf="@+id/place_editor"
      app:layout_constraintStart_toStartOf="@+id/place_editor" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="@string/dateLab"
      app:layout_constraintBottom_toTopOf="@+id/date_editor"
      app:layout_constraintEnd_toEndOf="@+id/date_editor"
      app:layout_constraintStart_toStartOf="@+id/date_editor" />

  <EditText
      android:id="@+id/name_editor"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="28dp"
      android:backgroundTint="#9B4444"
      android:inputType="textPersonName"
      app:layout_constraintEnd_toEndOf="@+id/label_editor"
      app:layout_constraintHorizontal_bias="0.505"
      app:layout_constraintStart_toStartOf="@+id/label_editor"
      app:layout_constraintTop_toBottomOf="@+id/label_editor" />

</androidx.constraintlayout.widget.ConstraintLayout>